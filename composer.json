{
  "name": "buexplain/alarm",
  "type": "library",
  "keywords": [
    "php",
    "swoole",
    "hyperf",
    "alarm",
    "weChat",
    "dingTalk"
  ],
  "description": "这个是一个基于hyperf的告警组件",
  "license": "Apache-2.0",
  "require": {
    "php": ">=7.2",
    "psr/log": "*",
    "monolog/monolog": "*",
    "hyperf/contract": "*",
    "hyperf/utils": "*",
    "hyperf/guzzle": "*",
    "hyperf/exception-handler": "*",
    "hyperf/process": "*",
    "ext-json": "*"
  },
  "minimum-stability": "stable",
  "autoload": {
    "psr-4": {
      "Alarm\\": "src/"
    }
  },
  "require-dev": {
    "swoft/swoole-ide-helper": "^4.2",
    "friendsofphp/php-cs-fixer": "^2.14",
    "mockery/mockery": "^1.0"
  },
  "autoload-dev": {
    "psr-4": {
      "AlarmTest\\": "tests/"
    }
  },
  "scripts": {
    "cs-fix": "php-cs-fixer fix ./src"
  },
  "extra": {
    "hyperf": {
      "config": "Alarm\\ConfigProvider"
    }
  },
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://mirrors.aliyun.com/composer"
    }
  }
}
