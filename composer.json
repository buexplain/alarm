{
  "name": "buexplain/alarm",
  "type": "project",
  "keywords": [
    "php",
    "swoole",
    "hyperf",
    "alarm",
    "weChat",
    "dingTalk"
  ],
  "description": "这个是一个基于hyperf的告警组件",
  "license": "MIT",
  "require": {
    "php": ">=7.2",
    "psr/log": "^1.0",
    "monolog/monolog": "^1.24",
    "hyperf/contract": "~1.1.0",
    "hyperf/utils": "~1.1.0",
    "hyperf/guzzle": "^1.1",
    "hyperf/exception-handler": "~1.1.0",
    "hyperf/process": "~1.1.0",
    "ext-json": "*"
  },
  "autoload": {
    "psr-4": {
      "Alarm\\": "src/"
    }
  },
  "require-dev": {
    "swoft/swoole-ide-helper": "^4.2",
    "friendsofphp/php-cs-fixer": "^2.14",
    "mockery/mockery": "^1.0"
  },
  "autoload-dev": {
    "psr-4": {
      "AlarmTest\\": "tests/"
    }
  },
  "scripts": {
    "cs-fix": "php-cs-fixer fix ./src",
    "test": "phpunit -c phpunit.xml --colors=always"
  },
  "repositories": {
    "packagist": {
      "type": "composer",
      "url": "https://mirrors.aliyun.com/composer"
    }
  }
}
